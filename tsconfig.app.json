{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "types/*",
    "src/**/*",
    "src/**/*.vue",
    "typed-router.d.ts",
    "auto-imports.d.ts",
    "components.d.ts",
    "node_modules/vite-plugin-vue-layouts/client.d.ts"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "functions/*": ["./functions/*"]
    },
    "types": ["vite-plugin-vue-layouts/client.d.ts",]
  }
}
